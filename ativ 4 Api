<!DOCTYPE html>
<html>
<head>
  <title> API /title>
</head>
<body>

<h2 id="nome_comentario"></h2>
<p>Coment√°rio:</p>
<p id="comentario"> </p>

<script>

let data;

async function fetchComentario() {
  try {
    const response = await fetch('https://dummyjson.com/comments');
    data = await response.json();
    console.log(data);

    
    document.getElementById('nome_comentario').innerHTML = data[0].name;
    document.getElementById('comentario').innerHTML = data[0].body;

  } catch (error) {
    console.error('Erro:', error);
  }
}


fetchComentario();
</script>    

</body>
</html>
